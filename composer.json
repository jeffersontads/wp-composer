{
    "name": "ecommerce/creative",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Jefferson R. Sotto",
      "email": "jeffersontads@hotmail.com",
      "homepage": "https://github.com/jeffersontads"
    }
  ],
  "keywords": [
    "creativecode", "composer", "creativecommerce", "wordpress", "wp", "wp-config"
  ],
  "support": {
    "issues": "https://github.com/jeffersontads/creativecommerce/issues",
    "forum": "https://creative.forum.br/category/bedrock"
  },
    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        }
    ],
    
        "require": {
            "composer/installers": "~1.0",
            "johnpbloch/wordpress": ">=5.8.1",
            "wpackagist-plugin/akismet":"^4.1",
            "wpackagist-plugin/wordpress-seo":"15.5",
            "wpackagist-plugin/contact-form-7": "*",
            "wpackagist-plugin/wp-super-cache": "^1.6",
            "wpackagist-plugin/wp-mail-smtp":"1.4.2",
            "wpackagist-plugin/advanced-custom-fields":"5.10.2"
        },
        "extra": {
	        "installer-paths": {
	            "app/wp-content/plugins/{$name}/": [
	                "type:wordpress-plugin"
	            ],
	            "app/wp-content/themes/{$name}/": [
	                "type:wordpress-theme"
	            ]
	        },
	        "wordpress-install-dir": "app"
	}
}
 